<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs', {title: "Edit User | WaveType"}) %>
<body>
  <%- include('../includes/header.ejs') %>

  <main>
    <h2>Edit a user</h2>

    <form action="/users/<%= user.slug %>" method="POST">
      <input type="text" value="<%= user.name %>" name="name" placeholder="name" /><br />
      <input type="text" value="<%= user.slug %>" name="slug" placeholder="slug" /><br />
      <input type="number" value="<%= user.score %>" name="score" placeholder="score" /><br />
      <button>Save</button>
    </form>
  </main>

  <%- include('../includes/footer.ejs') %>
</body>
</html>